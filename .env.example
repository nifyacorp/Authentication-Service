# Server Configuration
PORT=3000
NODE_ENV=development

# Cors Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=auth
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
INSTANCE_CONNECTION_NAME=project-id:us-central1:auth-service-db

# JWT Configuration
